extends layout

block content
  .row.banner
    .col-12
      h1(style="margin-top:100px;font-weight:bold;text-decoration:underline;") Review Restaurant

  .row
    .col-12.col-md-8
      form(action="/locations", method="post", role="form", style="display:inline-block;max-width:200;width:100%;margin-bottom:20px;")
        .form-group.row
          label.col-2.col-form-label(for="name") Name
          .col-10
            input#name.form-control(name="name", required)
        
        .form-group.row
          label.col-2.col-form-label(for="rating") Rating
          .col-10
            select#rating.form-control(name="rating", required)
              option(value="5") 5
              option(value="4") 4
              option(value="3") 3
              option(value="2") 2
              option(value="1") 1
        
        .form-group.row
          label.col-2.col-form-label(for="review") Review
          .col-10
            textarea#review.form-control(name="review", rows="5", required)

        a.btn.btn-primary.float-right(href="/restaurants", role="button") Add My Review

    .col-12.col-md-4
    
